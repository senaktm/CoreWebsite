@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Writer-Admin InBox</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sender</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th>Delete</th>
                            <th>Show Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td> @item.WriterMessageID</td>

                                <td> @item.SenderName  </td>

                                <td> @item.Subject</td>
                                <td> @item.Date</td>

                                <td><a href="/AdminMessage/AdminMessageDelete/@item.WriterMessageID" class="btn btn-danger">DELETE</a></td>
                                <td><a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID" class="btn btn-danger">Show Message</a></td>


                            </tr>
                        }
                        <a asp-action="AdminMessageSend" class="btn btn-primary mr-2">Send a new message</a>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>
