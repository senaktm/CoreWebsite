@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<!-- Dark table -->
<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">MY PORTFOLIO</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>                 
                            <th scope="col" class="sort" data-sort="name">Platform</th>
                            <th scope="col" class="sort" data-sort="budget">Budget</th>
                            <th scope="col" class="sort" data-sort="status">Status</th>
                            <th scope="col" class="sort">ImageUrl</th>
                            <th scope="col" class="sort" data-sort="completion">Completion</th>
                            <th scope="col" class="sort">ProjectUrl</th>
                            <th scope="col" class="sort">ImageUrl2</th>
                            <th scope="col">DELETE</th>
                            <th scope="col" class="sort">EDIT</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach(var item in Model){
                        <tr>
                            <th scope="row">
                                <div class="media align-items-center">
                                    <a href="#" class="avatar rounded-circle mr-3">
                                        <img alt="Image placeholder" src="@item.Platform">
                                    </a>
                                    <div class="media-body">
                                        <span class="name mb-0 text-sm">@item.Name</span>
                                    </div>
                                </div>
                            </th>
                            <td class="budget">
                                @item.Price
                            </td>
                            <td>
                                <span class="badge badge-dot mr-4">
                                    <i class="bg-success"></i>
                                    <span class="status">Completed</span>
                                </span>
                            </td>
               
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="completion mr-2">@item.Completion%</span>
                                    <div>
                                        <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Completion" aria-valuemin="0" aria-valuemax="100" style="width:@item.Completion%;"></div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                                <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-primary">DELETE PROJECT</a></td>
                                <td><a href="/Portfolio/EditPortfolio/@item.PortfolioID" class="btn btn-primary">EDIT PROJECT</a></td>
                   
                        </tr>
                        }
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>
<td><a href="/Portfolio/AddPortfolio/" class="btn btn-primary">ADD NEW PROJECT</a></td>


