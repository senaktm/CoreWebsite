@using EntityLayer.Concrete
@model List<Portfolio>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Project List</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Main Picture</th>
                                <th> Project Name </th>
                                <th> Project Url </th>
                                <th> Product Cost </th>
                            
                                <th> Completion </th>
                                <th> Payment Status </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <td>
                                       @item.PortfolioID
                                    </td>
                                    <td>
                                        <img src=" @item.ImageUrl" />
                                      
                                    </td>
                                    <td> @item.Name </td>
                                    <td> @item.ProjectUrl</td>
                                   
                                    <td> @item.Price </td>
                                    <td> %@item.Completion </td>
                                    <td>
                                        <div class="badge badge-outline-success">Approved</div>
                                    </td>
                                </tr>
                            }
                       
               
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>