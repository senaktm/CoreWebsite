@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Experience List Table</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Date</th>
                            <th>ImageUrl</th>
                            <th>Description</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td> @item.ExperienceID</td>

                                <td> @item.Name  </td>

                                <td> @item.Date</td>
                                <td> @item.ImageUrl</td>
                                <td> @item.Description</td>
                                <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">DELETE</a></td>
                                <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-info">EDIT</a></td>


                            </tr>
                        }
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>
<a href="/Experience/AddExperience/" class="btn btn-primary">ADD NEW EXPERIENCE</a>