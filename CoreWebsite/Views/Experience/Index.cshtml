@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Card header -->
<div class="card-header border-0">
    <h3 class="mb-0">Experience List Table</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Name</th>
                <th scope="col" class="sort" data-sort="status">Date</th>
                <th scope="col" class="sort" data-sort="status">ImageUrl</th>
                <th scope="col" class="sort" data-sort="status">Description</th>
                <th scope="col">DELETE</th>
                <th scope="col" class="sort" data-sort="completion">EDIT</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {

                <tr>
                    <th>
                        @item.ExperienceID
                    </th>
                    <th class="budget">

                            @item.Name
                            
                        </th>   
        
                    <td> @item.Date</td>
                    <td> @item.ImageUrl</td>
                    <td> @item.Description</td>
                    <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">DELETE</a></td>
                    <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-info">EDIT</a></td>
                   

                </tr>
            }
        </tbody>
    </table>
    <td><a href="/Experience/AddExperience/" class="btn btn-primary">ADD NEW EXPERIENCE</a></td>
</div>


