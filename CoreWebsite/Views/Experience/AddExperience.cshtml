@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddExperience</h1>


<!-- Card header -->
<div class="card-header border-0">
    <h3 class="mb-0">Experience Adding Table</h3>
</div>
<br />
<br />
@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    @Html.Label("Name")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Date")
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    @Html.Label("ImageUrl")
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.Label("Description")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-primary">SAVE</button>

}
