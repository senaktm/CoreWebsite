@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Card header -->
<div class="card-header border-0">
    <h3 class="mb-0">Service List Table</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Title</th>
                <th scope="col" class="sort" data-sort="status">ImageUrl</th>
                <th scope="col">DELETE</th>
                <th scope="col" class="sort">EDIT</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {

                <tr>
                    <th>
                        @item.ServiceID
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <span class="completion mr-2">@item.ImageUrl</span>


                        </div>
                    </td>
                    <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">DELETE</a></td>
                    <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-info">EDIT</a></td>
                 

                </tr>
            }
        </tbody>
    </table>
 
</div>
<td><a href="/Service/AddService/" class="btn btn-primary">ADD NEW SERVICE</a></td>
