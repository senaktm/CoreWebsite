@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "TestimonialEdit";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>TestimonialEdit</h1>


@using (Html.BeginForm("TestimonialEdit", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reference Details Page </h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.TestimonialID)
                    <div class="form-group">
                        @Html.Label("Name Surname")
                        @Html.TextBoxFor(x => x.TestimonialName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Company")
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Title")
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("ImageUrl")
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Comment")
                        @Html.TextAreaFor(x => x.Comment, 6, 3, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>

}
<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>
