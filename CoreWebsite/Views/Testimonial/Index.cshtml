@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reference List</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                
                               
                                <th>#</th>
                                <th>Name Surname</th>
                                <th> Company </th>
                                <th> Title </th>
                                <th> Delete Mode </th>
                                <th> Details </th>
                      
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                              
                                   

                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                        <span class="pl-2">Henry Klein</span>
                                    </td>
                                    <td> @item.TestimonialName </td>
                                    <td> @item.Company </td>
                                    <td> @item.Title </td>
                                    <td> <a href="/Testimonial/TestimonialDelete/@item.TestimonialID" class="btn btn-outline-danger">Delete </a> </td>
                                    <td> <a href="/Testimonial/TestimonialEdit/@item.TestimonialID" class="btn btn-outline-info">Details </a> </td>

                            </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>