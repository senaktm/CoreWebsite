@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Message Details Page </h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.MessageID)
                    <div class="form-group">
                        @Html.Label("Name")
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Mail")
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Date")
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Content")
                        @Html.TextAreaFor(x => x.Content, 6, 3, new { @class = "form-control" })
                    </div>

                   <a asp-action="Index" class="btn btn-primary mr-2">Go Back to Message List</a>
                   
                </form>
            </div>
        </div>
    </div>

<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>
